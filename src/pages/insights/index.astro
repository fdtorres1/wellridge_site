---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allInsights = await getCollection('insights');
const sortedInsights = allInsights.sort((a, b) => {
  if (a.data.pinned && !b.data.pinned) return -1;
  if (!a.data.pinned && b.data.pinned) return 1;
  return b.data.pubDate.getTime() - a.data.pubDate.getTime();
});

const categories = ['Strategy & Fit', 'Narrative & Score', 'Budgets & Evidence', 'Reporting & Renewal', 'Process & Tools'];
---

<BaseLayout title="Insights" description="Thought leadership and practical guidance on grant writing, RFP response, and funding strategy.">
  <section class="py-20 bg-gradient-to-b from-white to-fog">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl font-serif font-bold text-slate-deep mb-6">Insights</h1>
      <p class="text-xl text-gray-600">
        Practical guidance on grant writing, RFP response, and funding strategy.
      </p>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Category Filters -->
      <div class="flex flex-wrap gap-2 mb-12">
        <button
          data-filter="all"
          class="px-4 py-2 bg-ridge-blue text-white rounded-md text-sm font-medium filter-btn active"
        >
          All
        </button>
        {categories.map((category) => (
          <button
            data-filter={category}
            class="px-4 py-2 bg-gray-200 text-slate-deep rounded-md text-sm font-medium hover:bg-gray-300 filter-btn"
          >
            {category}
          </button>
        ))}
      </div>

      <!-- Newsletter Signup -->
      <div class="bg-fog p-8 rounded-lg mb-12">
        <h2 class="text-2xl font-serif font-bold mb-4">Get Monthly Notes from the Ridge</h2>
        <p class="text-gray-700 mb-4">
          Subscribe to our newsletter for grant writing tips, funding insights, and updates from Wellridge Advisory.
        </p>
        <form class="flex gap-2">
          <input
            type="email"
            placeholder="Your email"
            class="flex-1 px-4 py-2 border border-gray-300 rounded-md bg-white text-slate-deep focus:outline-none focus:ring-2 focus:ring-ridge-blue"
          />
          <button
            type="submit"
            class="px-6 py-2 bg-ridge-blue text-white rounded-md font-medium hover:bg-opacity-90 transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>

      <!-- Insights Grid -->
      {sortedInsights.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="insights-grid">
          {sortedInsights.map((insight) => (
            <a
              href={`/insights/${insight.slug}`}
              class="block border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow insight-card"
              data-category={insight.data.category}
            >
              {insight.data.pinned && (
                <span class="inline-block px-2 py-1 bg-ridge-blue text-white text-xs font-medium rounded mb-2">
                  Featured
                </span>
              )}
              <span class="text-sm text-gray-500 font-medium">{insight.data.category}</span>
              <h3 class="text-xl font-serif font-bold mt-2 mb-2">{insight.data.title}</h3>
              <p class="text-gray-600 text-sm mb-4">{insight.data.description}</p>
              <span class="text-ridge-blue hover:underline font-medium text-sm">Read more â†’</span>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-600">Insights coming soon. Check back for practical guidance on grant writing and RFP response.</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<script>
  const filterButtons = document.querySelectorAll('.filter-btn');
  const insightCards = document.querySelectorAll('.insight-card');

  filterButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');
      
      // Update active button
      filterButtons.forEach((btn) => {
        btn.classList.remove('active', 'bg-ridge-blue', 'text-white');
        btn.classList.add('bg-gray-200', 'text-slate-deep');
      });
      button.classList.add('active', 'bg-ridge-blue', 'text-white');
      button.classList.remove('bg-gray-200', 'text-slate-deep');

      // Filter cards
      insightCards.forEach((card) => {
        const category = card.getAttribute('data-category');
        if (filter === 'all' || category === filter) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>

