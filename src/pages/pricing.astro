---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Pricing & Packages" description="Transparent pricing ranges for grant and RFP support services.">
  <section class="py-20 bg-gradient-to-b from-white to-fog">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl font-serif font-bold text-slate-deep mb-6">Pricing & Packages</h1>
      <p class="text-xl text-gray-600">
        Transparent ranges for clarity.
      </p>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-lg text-gray-700 mb-8">
        Every project is unique. We start with a discovery call to understand your needs, then provide a custom scope and budget alignment. The ranges below reflect typical project complexity, timeline, and material requirements. Final quotes are provided after our initial conversation.
      </p>
    </div>
  </section>

  <!-- Audience Toggle -->
  <section class="py-8 bg-fog">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-center gap-4" role="tablist" aria-label="Select audience type">
        <button
          id="tab-nonprofit"
          class="px-6 py-3 bg-ridge-blue text-white rounded-md font-medium transition-colors"
          role="tab"
          aria-selected="true"
          aria-controls="panel-nonprofit"
        >
          Nonprofits
        </button>
        <button
          id="tab-municipal"
          class="px-6 py-3 bg-gray-300 text-slate-deep rounded-md font-medium hover:bg-gray-400 transition-colors"
          role="tab"
          aria-selected="false"
          aria-controls="panel-municipal"
        >
          Municipal / Education
        </button>
      </div>
    </div>
  </section>

  <!-- Nonprofit Packages (default visible) -->
  <section id="panel-nonprofit" class="py-16 bg-white" role="tabpanel" aria-labelledby="tab-nonprofit">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 space-y-12">
      <div class="border border-gray-200 rounded-lg p-8">
        <h2 class="text-2xl font-serif font-bold mb-4">Foundation & Corporate Grant Package</h2>
        <p class="text-3xl font-bold text-ridge-blue mb-6">$2,500–$5,000 per proposal</p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Strategy session + narrative planning</li>
          <li>Proposal writing and supporting documents</li>
          <li>Budget review + funder alignment</li>
          <li>1 revision cycle included</li>
        </ul>
      </div>

      <div class="border border-gray-200 rounded-lg p-8">
        <h2 class="text-2xl font-serif font-bold mb-4">Annual Grant Calendar & Retainer</h2>
        <p class="text-3xl font-bold text-ridge-blue mb-6">$3,000–$7,000 / month</p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Prospect research and prioritization</li>
          <li>Proposal drafting, renewals, and reporting</li>
          <li>Regular funder pipeline meetings</li>
          <li>Progress dashboard & outcomes tracking</li>
        </ul>
      </div>

      <div class="border border-gray-200 rounded-lg p-8">
        <h2 class="text-2xl font-serif font-bold mb-4">Capacity-Building Support</h2>
        <p class="text-3xl font-bold text-ridge-blue mb-6">$1,500–$3,500 (one-time or add-on)</p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Funding readiness assessment</li>
          <li>Case-for-support refinement</li>
          <li>Internal docs + template setup</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Municipal & Educational Packages (hidden by default) -->
  <section id="panel-municipal" class="py-16 bg-white hidden" role="tabpanel" aria-labelledby="tab-municipal">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 space-y-12">
      <div class="border border-gray-200 rounded-lg p-8">
        <h2 class="text-2xl font-serif font-bold mb-4">State or Regional RFP Support</h2>
        <p class="text-3xl font-bold text-ridge-blue mb-6">$5,000–$12,000 per response</p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>RFP breakdown + compliance matrix</li>
          <li>Narrative development + budget structure</li>
          <li>Submission management + internal reviews</li>
          <li>Optional post-submission debrief</li>
        </ul>
      </div>

      <div class="border border-gray-200 rounded-lg p-8">
        <h2 class="text-2xl font-serif font-bold mb-4">Federal or Multi-Agency Proposals</h2>
        <p class="text-3xl font-bold text-ridge-blue mb-6">$12,000–$25,000+</p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Capture + proposal management</li>
          <li>Technical + management volume writing</li>
          <li>Cross-department coordination</li>
          <li>Color-team reviews (Red/Gold/White)</li>
        </ul>
      </div>

      <div class="border border-gray-200 rounded-lg p-8">
        <h2 class="text-2xl font-serif font-bold mb-4">Ongoing Partnership Retainer</h2>
        <p class="text-3xl font-bold text-ridge-blue mb-6">$4,000–$9,000 / month</p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Grant + RFP pipeline maintenance</li>
          <li>Team alignment meetings + training</li>
          <li>Proposal templates + narrative library</li>
          <li>Quarterly strategy review</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Add-Ons & Specialized Services -->
  <section class="py-16 bg-fog">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-serif font-bold mb-8">Add-Ons & Specialized Services</h2>
      <div class="bg-white rounded-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold text-slate-deep">Service</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-slate-deep">Typical Range</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <tr>
              <td class="px-6 py-4 text-gray-700">Prospect research refresh</td>
              <td class="px-6 py-4 text-gray-700">$1,000–$2,000</td>
            </tr>
            <tr>
              <td class="px-6 py-4 text-gray-700">Budget architecture</td>
              <td class="px-6 py-4 text-gray-700">$750–$1,500</td>
            </tr>
            <tr>
              <td class="px-6 py-4 text-gray-700">Impact reporting setup</td>
              <td class="px-6 py-4 text-gray-700">$1,000–$2,000</td>
            </tr>
            <tr>
              <td class="px-6 py-4 text-gray-700">Orals coaching / presentations</td>
              <td class="px-6 py-4 text-gray-700">$1,500–$3,000</td>
            </tr>
            <tr>
              <td class="px-6 py-4 text-gray-700">Post-award compliance support</td>
              <td class="px-6 py-4 text-gray-700">$1,000–$2,500</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- How We Work -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-serif font-bold mb-6">How We Work</h2>
      <div class="bg-fog p-8 rounded-lg">
        <h3 class="text-xl font-serif font-bold mb-4">Discovery & Roadmap Session — starting at <span class="text-ridge-blue">$1,500</span></h3>
        <p class="text-lg text-gray-700 mb-4">
          You'll receive a custom scope, budget alignment, and project calendar. No surprises—just clear partnership from day one.
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Transparent ranges (complexity/timeline/materials affect quote)</li>
          <li>No commission/percentage models</li>
          <li>Ethics-first: funder compliance and industry best practices</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="py-16 bg-fog">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-serif font-bold mb-8">Frequently Asked Questions</h2>
      <div class="space-y-6">
        <div class="bg-white p-6 rounded-lg">
          <h3 class="text-lg font-semibold mb-2">Why ranges instead of fixed prices?</h3>
          <p class="text-gray-700">
            Every project is unique. Complexity, timeline, and material requirements vary. Ranges give you a clear expectation, and we provide a fixed quote after our discovery call.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg">
          <h3 class="text-lg font-semibold mb-2">Do you work on tight deadlines?</h3>
          <p class="text-gray-700">
            Yes, but we prioritize quality. Rush projects may require adjusted timelines or additional resources. We'll discuss options during discovery.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg">
          <h3 class="text-lg font-semibold mb-2">What about hourly work?</h3>
          <p class="text-gray-700">
            We prefer project-based pricing for clarity and alignment. For ongoing advisory or specialized tasks, we can discuss hourly arrangements.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg">
          <h3 class="text-lg font-semibold mb-2">Will you write without internal inputs?</h3>
          <p class="text-gray-700">
            No. Strong proposals require your expertise, data, and insights. We structure and write, but we need your collaboration on program details, outcomes, and organizational context.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg">
          <h3 class="text-lg font-semibold mb-2">Can you support post-award tasks?</h3>
          <p class="text-gray-700">
            Yes. We offer reporting support, renewal planning, and ongoing stewardship services. These can be included in retainers or as separate projects.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-slate-deep text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-serif font-bold mb-6">Ready to Explore?</h2>
      <p class="text-xl text-gray-300 mb-8">
        Book a 30-minute discovery call to discuss your needs and receive a custom quote.
      </p>
      <a
        href="/contact"
        class="inline-block px-8 py-3 bg-ridge-blue text-white rounded-md text-lg font-medium hover:bg-opacity-90 transition-colors"
      >
        Book a Discovery Call
      </a>
    </div>
  </section>
</BaseLayout>

<script>
  const nonprofitTab = document.getElementById('tab-nonprofit');
  const municipalTab = document.getElementById('tab-municipal');
  const nonprofitPanel = document.getElementById('panel-nonprofit');
  const municipalPanel = document.getElementById('panel-municipal');

  function switchTab(activeTab: string) {
    if (activeTab === 'nonprofit') {
      nonprofitTab?.setAttribute('aria-selected', 'true');
      nonprofitTab?.classList.remove('bg-gray-300', 'text-slate-deep');
      nonprofitTab?.classList.add('bg-ridge-blue', 'text-white');
      municipalTab?.setAttribute('aria-selected', 'false');
      municipalTab?.classList.remove('bg-ridge-blue', 'text-white');
      municipalTab?.classList.add('bg-gray-300', 'text-slate-deep');
      nonprofitPanel?.classList.remove('hidden');
      municipalPanel?.classList.add('hidden');
    } else {
      municipalTab?.setAttribute('aria-selected', 'true');
      municipalTab?.classList.remove('bg-gray-300', 'text-slate-deep');
      municipalTab?.classList.add('bg-ridge-blue', 'text-white');
      nonprofitTab?.setAttribute('aria-selected', 'false');
      nonprofitTab?.classList.remove('bg-ridge-blue', 'text-white');
      nonprofitTab?.classList.add('bg-gray-300', 'text-slate-deep');
      municipalPanel?.classList.remove('hidden');
      nonprofitPanel?.classList.add('hidden');
    }
  }

  nonprofitTab?.addEventListener('click', () => switchTab('nonprofit'));
  municipalTab?.addEventListener('click', () => switchTab('municipal'));
</script>

